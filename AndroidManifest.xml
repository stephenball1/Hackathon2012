<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viasat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Globals"
        android:icon="@drawable/logo"
        android:label="@string/app_name" >
        <activity
            android:name=".Hackathon2012Activity"
            android:theme="@android:style/Theme.Holo.Light" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainScreen" android:theme="@android:style/Theme.Holo.Light" android:screenOrientation="portrait"></activity>
        <activity android:name=".Stats" android:theme="@android:style/Theme.Holo.Light" android:screenOrientation="portrait"></activity>
        <activity android:name=".WatchMovie" android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" android:screenOrientation="landscape"></activity>
        <activity android:name=".MovieActivity" android:theme="@android:style/Theme.Holo.Light" android:screenOrientation="portrait"></activity>
    </application>

</manifest>